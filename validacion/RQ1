import json, pandas as pd
data = json.load(open('data/requisitos_raw.json', encoding='utf-8'))
df   = pd.json_normalize(data)           # columnas: id, description…
df['tag'] = ''                           # las rellenaremos a mano
df['norma_sugerida'] = ''
df.to_csv('quick_scan_template.csv', index=False, quoting=1)  # quoting=1 → all non-numeric fields con comillas

print("Va por aqui")
pd.read_csv('data/quick_scan.csv', on_bad_lines='skip').head()
print("Lo ha leido")